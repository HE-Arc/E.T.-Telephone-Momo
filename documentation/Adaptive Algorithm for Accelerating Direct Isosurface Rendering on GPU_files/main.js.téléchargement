$(function(){
	    $(".search-icon,.blank").click(function () {
    	if($(".header-search").css("top")=="-160px"){
    		$(".blank").stop(false,true).fadeIn(600);
    		$(".header-search").stop(false,true).animate({"top":"160px"},600);
    	}else{
    		$(".blank").stop(false,true).fadeOut(600);
    		$(".header-search").stop(false,true).animate({"top":"-160px"},600);
    	}
    });
		//移动端顶部下拉按钮调整
	    $('.navList').click(function(){
	      if($(this).hasClass('on')){
	    	  $(this).removeClass('on')
	    	   $('.navList span').css({'marginBottom': 8 + 'px'})
	          $(this).find('.span1').css({"margin-top":8 + 'px'});
	          $(this).find('.span3').css({"margin-top":-22 + 'px'});    	           
	      }else{
	    	  $(this).addClass('on')
	    	  $('.navList span').css({'marginBottom': 5 + 'px'})
	          $(this).find('.span1').css({"margin-top":0});
	          $(this).find('.span3').css({"margin-top":0,"margin-bottom":0});       	  
	      }
	    });
	    
	    $(".search-app").click(function () {
	        if(!$('.navList').hasClass('on')){
	        	//alert('a')
	      	 $('.navList').addClass('on')
	    	  $('.navList span').css({'marginBottom': 2 + 'px'})
	         $('.navList').find('.span1').css({"margin-top":0});
	        	$('.navList').find('.span3').css({"margin-top":0});  
	        }
	    });     
	    
	    $('.carousel-inner .item .pic .mc .thumbtitle').subTextMax({
			keep_len:80
		})
	    

	    
	
})

$(window).load(function() {
	   //全文判断与显示
	var viewType = getUrlParam("viewType");
	if(viewType && "HTML" == viewType){
		//console.log($('#FullText').text())
		if($('#FullText').text() == ' ' || $('#FullText').text() == ''){
			//$('#abstractview').click();
		}else{
			$('#htmlview').click();
			
		}
		
	}else{
		//alert('a')
		$('#abstractview').click();
	}
	
	
	
	
	var i=0;
	//要循环的数量
	var num = $(".planting1 li").length;
	//求总宽度
	var widths = 0;
	$(".planting1 > li").each(function(){
		console.log($(".planting1 > li"))
		var num_i = Number($(this).outerWidth(true)) + 10;
		//console.log(num_i)
		widths += num_i;
		
	})
	$('.planting1').css({'width':widths})
	$('.planting-box').css({'width': widths * 2})
	//console.log(widths)
	var clone = $(".planting1").html();
	$(".planting2").html(clone);
	var t=setInterval(moveL,30);
	
	//鼠标放上暂停播放事件
	$('.xxgg-center').hover(function(){
		clearInterval(t)
	},function(){
		 t=setInterval(moveL,30);
	})
	
	function moveL(){
		i++;
		var sizess = $(".planting1 li").length;
		if(i > widths){
			$(".planting-box").css({left:0});
			i=0
		}
		$(".planting-box").css({left:-i+'px'});
	}
	
	$('.guokan-pic li:last-of-type').css({'marginRight':0})
	
	if($(window).width()<=1200){
	    $(".tab-ul-index").css({"width":$(".tab-ul-index li").length*$(".tab-ul-index li").outerWidth(true)+200});
	}	
	
})